
<h1>Sources</h1>

<table class='grid'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Url</th>
      <th>Wms params</th>
      <th>Source type</th>
      <th>Layer</th>
      <th>Server type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sources.each do |source| %>
      <tr>
        <td><%= source.id %></td>    
        <td><%= source.url %></td>
        <td><%= source.wms_params %></td>
        <td><%= source.source_type %></td>
        <td><%= source.layer %></td>
        <td><%= source.server_type %></td>
        <td><%= link_to 'Show', source %></td>
        <td><%= link_to 'Edit', edit_source_path(source) %></td>
        <td><%= link_to 'Destroy', source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

